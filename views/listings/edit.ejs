<% layout('./layouts/boilerplate') -%>

<body>
    <h3>Edit Your Listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
        <div>
            <label for="title" class="form-label">Edit Title: &nbsp;</label>
            <input value="<%=listing.title%>" name="listing[title]" type="text" class="form-control">
        </div>
        &nbsp;
        <div>
            <label for="Description" class="form-label">Edit Description: </label>
            <textarea name="listing[description]" type="text" class="form-control"><%=listing.title%></textarea>
        </div>
        &nbsp;
        <div>
            <label for="image" class="form-label">Edit image URL: </label>
            <input value="<%=listing.image%>" name="listing[image]" type="text" class="form-control">
        </div>
        &nbsp;
        <div>
            <label for="price" class="form-label">Edit Price: </label>
            <input value="<%=listing.price%>" name="listing[price]" type="number" class="form-control">
        </div>
        &nbsp;
        <div>
            <label for="location" class="form-label">Edit Location: </label>
            <input value="<%=listing.location%>" name="listing[location]" type="text" class="form-control">
        </div>
        &nbsp;
        <div>
            <label for="country" class="form-label">Edit Country: </label>
            <input value="<%=listing.country%>" name="listing[country]" type="text" class="form-control">
        </div>
        &nbsp;
        &nbsp;<br />
        <button class="btn btn-dark add-btn">Submit</button>


    </form>
</body>