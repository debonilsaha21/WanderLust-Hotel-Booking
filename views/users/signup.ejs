<% layout('./layouts/boilerplate') -%>

<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" novalidate class="needs-validation">
                <h2>New User Sign-up</h2>
                &nbsp;
                <div>
                    <label for="username" class="form-label">
                        Username: &nbsp;
                    </label>
                    <input placeholder="Enter Username" id="username" name="user[username]" type="text"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Username looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid Username
                    </div>
                </div>
                &nbsp;
                <div>
                    <label for="email" class="form-label">
                        Enter Email: &nbsp;
                    </label>
                    <input placeholder="Enter Email" name="user[email]" id="email" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Email looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid Email-ID
                    </div>
                </div>
                &nbsp;
                <div>
                    <label for="password" class="form-label">
                        Enter Email: &nbsp;
                    </label>
                    <input placeholder="Enter password" name="user[password]" id="password" type="password"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Password looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid password
                    </div>
                </div>
                &nbsp;&nbsp;<br />
                <button class="btn btn-primary ">Sign-up</button>
            </form>

        </div>
    </div>
</body>